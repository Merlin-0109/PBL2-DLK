{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Build Datchikham",
            "type": "shell",
            "command": "cmake",
            "args": [
                "-S", ".",
                "-B", "build"
            ],
            "group": "build",
            "problemMatcher": "$gcc"
        },
        {
            "label": "Compile Datchikham",
            "type": "shell",
            "command": "cmake",
            "args": [
                "--build", "build"
            ],
            "dependsOn": ["Build Datchikham"],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "problemMatcher": "$gcc"
        }
    ]
}
